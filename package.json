{
  "name": "customerbase",
  "version": "1.0.0",
  "description": "simple GraphQL server",
  "main": "server.js",
  "scripts": {
    "dev:server": "nodemon server.js",
    "json:server": "json-server --watch data.json",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run dev:server\" \"npm run json:server\" \"npm run client\"",
    "start": "concurrently \"node server.js\" \"json-server --watch data.json\""
  },
  "author": "Steve",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "concurrently": "^4.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.4.2",
    "json-server": "^0.15.0",
    "nodemon": "^1.19.1"
  }
}
